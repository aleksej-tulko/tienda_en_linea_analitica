{
  "name": "mirror_connector",
  "config": {
    "connector.class": "org.apache.kafka.connect.mirror.MirrorSourceConnector",
    "source.cluster.alias":"source",
    "target.cluster.alias": "target",
    "topics":"filtered_items",
    "source.cluster.bootstrap.servers": "kafka-1:9093,kafka-2:9093,kafka-3:9093",
    "target.cluster.bootstrap.servers": "kafka-replica-1:9093,kafka-replica-2:9093,kafka-replica-3:9093",
    "offset-syncs.topic.replication.factor": "3",
    "offset-syncs.topic.location": "target",
    "tasks.max": 1,

    "producer.override.bootstrap.servers": "kafka-replica-1:9093,kafka-replica-2:9093,kafka-replica-3:9093",
    "producer.override.security.protocol": "SASL_SSL",
    "producer.override.ssl.keystore.type": "PKCS12",
    "producer.override.ssl.truststore.type": "JKS",
    "producer.override.ssl.keystore.location": "/etc/kafka/certs/client.p12",
    "producer.override.ssl.truststore.location": "/etc/kafka/certs/truststore.jks",
    "producer.override.ssl.truststore.password": "changeit",
    "producer.override.ssl.keystore.password": "changeit",
    "producer.override.sasl.mechanism": "PLAIN",
    "producer.override.sasl.jaas.config": "org.apache.kafka.common.security.plain.PlainLoginModule required username=\"mirror\" password=\"mirror_pass\";",

    "source.consumer.security.protocol": "SASL_SSL",
    "source.consumer.ssl.keystore.type": "PKCS12",
    "source.consumer.ssl.truststore.type": "JKS",
    "source.consumer.ssl.keystore.location": "/etc/kafka/certs/client.p12",
    "source.consumer.ssl.truststore.location": "/etc/kafka/certs/truststore.jks",
    "source.consumer.ssl.truststore.password": "changeit",
    "source.consumer.ssl.keystore.password": "changeit",
    "source.consumer.sasl.mechanism": "PLAIN",
    "source.consumer.sasl.jaas.config": "org.apache.kafka.common.security.plain.PlainLoginModule required username=\"mirror\" password=\"mirror_pass\";",
    
    "source.admin.security.protocol": "SASL_SSL",
    "source.admin.ssl.keystore.type": "PKCS12",
    "source.admin.ssl.truststore.type": "JKS",
    "source.admin.ssl.keystore.location": "/etc/kafka/certs/client.p12",
    "source.admin.ssl.truststore.location": "/etc/kafka/certs/truststore.jks",
    "source.admin.ssl.truststore.password": "changeit",
    "source.admin.ssl.keystore.password": "changeit",
    "source.admin.sasl.mechanism": "PLAIN",
    "source.admin.sasl.jaas.config": "org.apache.kafka.common.security.plain.PlainLoginModule required username=\"kafka_server_admin\" password=\"kafka_server_pass\";",

    "target.producer.security.protocol": "SASL_SSL",
    "target.producer.ssl.keystore.type": "PKCS12",
    "target.producer.ssl.truststore.type": "JKS",
    "target.producer.ssl.keystore.location": "/etc/kafka/certs/client.p12",
    "target.producer.ssl.truststore.location": "/etc/kafka/certs/truststore.jks",
    "target.producer.ssl.truststore.password": "changeit",
    "target.producer.ssl.keystore.password": "changeit",
    "target.producer.sasl.mechanism": "PLAIN",
    "target.producer.sasl.jaas.config": "org.apache.kafka.common.security.plain.PlainLoginModule required username=\"mirror\" password=\"mirror_pass\";",

    "target.admin.security.protocol": "SASL_SSL",
    "target.admin.ssl.keystore.type": "PKCS12",
    "target.admin.ssl.truststore.type": "JKS",
    "target.admin.ssl.keystore.location": "/etc/kafka/certs/client.p12",
    "target.admin.ssl.truststore.location": "/etc/kafka/certs/truststore.jks",
    "target.admin.ssl.truststore.password": "changeit",
    "target.admin.ssl.keystore.password": "changeit",
    "target.admin.sasl.mechanism": "PLAIN",
    "target.admin.sasl.jaas.config": "org.apache.kafka.common.security.plain.PlainLoginModule required username=\"kafka_server_admin\" password=\"kafka_server_pass\";"
    }
}